<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.company.fragments.CompanyDetailsFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/jejumyeongjo"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:paddingBottom="20dp" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:fontFamily="@font/jejumyeongjo"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody1" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo"
            android:drawableStart="@drawable/ic_mail"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/workingHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo"
            android:drawableStart="@drawable/ic_hour"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo"
            android:drawableStart="@drawable/ic_phone"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginBottom="10dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo"
            android:drawableStart="@drawable/ic_location"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginBottom="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jejumyeongjo"
            android:text="@string/gallery"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">
            <TextView
                android:id="@+id/no_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_images"
                android:visibility="gone"
                android:fontFamily="@font/jejumyeongjo"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
