<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.company.CompanyDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginBottom="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eventura Solutions"
                    android:fontFamily="@font/jejumyeongjo"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:paddingBottom="20dp" />

                <Button
                    android:id="@+id/editCompanyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:iconSize="25dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/md_theme_primary"
                    app:backgroundTint="@color/md_theme_primaryContainer"
                    android:contentDescription="Edit"
                    android:layout_marginStart="16dp" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingBottom="16dp"
                android:fontFamily="@font/jejumyeongjo"
                android:text="Eventura Solutions specializes in providing comprehensive event planning and coordination services, along with high-quality event-related products to make every occasion unforgettable."
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceBody1" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="eventura@example.com"
                android:fontFamily="@font/jejumyeongjo"
                android:drawableStart="@drawable/ic_mail"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+381 123 456"
                android:fontFamily="@font/jejumyeongjo"
                android:drawableStart="@drawable/ic_phone"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Street 12, City"
                android:fontFamily="@font/jejumyeongjo"
                android:drawableStart="@drawable/ic_location"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="25dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:spacing="8dp">

                    <!--TODO: delete this, now is just for example-->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@android:drawable/ic_menu_gallery" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/manage_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="Manage Categories"
        android:backgroundTint="@color/md_theme_primary"
        android:textColor="@android:color/white" />

</FrameLayout>
