<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_tertiaryContainer"
    tools:context=".presentation.fragments.service.ManageServiceFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/md_theme_secondaryContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/servicesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/services"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/jejumyeongjo"
            android:background="@color/md_theme_tertiaryContainer"
            android:paddingTop="10dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

        <LinearLayout
            app:layout_constraintTop_toBottomOf="@id/servicesText"
            app:layout_constraintBottom_toTopOf="@id/linear_layout_services"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:id="@+id/searchBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchText"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_background"
                app:queryHint="Search" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/deleteButton"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@android:color/darker_gray"
                app:icon="@drawable/ic_tune"
                app:iconTint="@android:color/black" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_tertiaryContainer"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/searchBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/servicesRecycleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_gravity="center" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>