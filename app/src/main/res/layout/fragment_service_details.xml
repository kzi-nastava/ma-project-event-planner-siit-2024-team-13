<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_secondaryContainer"
    tools:context=".presentation.fragments.service.ServiceDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/generalInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@color/card_background"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                >

                <Button
                    android:id="@+id/favButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="5dp"
                    app:icon="@drawable/ic_fav"
                    app:iconTint="@android:color/black" />


                <Button
                    android:id="@+id/chatButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    app:icon="@drawable/ic_chat"
                    app:iconTint="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:paddingTop="20dp"
                    android:text="@string/service"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/starButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:clickable="false"
                    app:icon="@drawable/ic_star"
                    app:iconTint="@color/gold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:text="4.9"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/generalInformation"
                android:id="@+id/serviceInfo"
                android:background="@color/card_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginStart="20dp"
                    android:text="Service Name"
                    android:textSize="32sp" />
                <TextView
                    android:text="Category"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/description"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lorem"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/specificities"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/specialtiesText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/lorem"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/photos"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

                <LinearLayout
                    android:id="@+id/photos"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/profile_photo"
                        android:layout_height="120dp"
                        android:layout_width="120dp"/>
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:src="@drawable/profile_photo"
                        android:layout_height="120dp"
                        android:layout_width="120dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Duration: 2h"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Reservation deadline: 30.4.2025."
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cancellation deadline: 30.4.2025."
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/providerButton"
                        style="?attr/materialIconButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_info"
                        app:iconTint="@android:color/black" />

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Provider Name"
                        android:fontFamily="@font/jejumyeongjo"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>