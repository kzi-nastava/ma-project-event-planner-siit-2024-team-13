<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_secondaryContainer"
    tools:context=".presentation.solution.fragments.product.ProductDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/generalInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@color/card_background"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="5dp"
                    app:icon="@drawable/ic_not_favourite"
                    app:iconTint="@android:color/black" />


                <Button
                    android:id="@+id/chatButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    app:icon="@drawable/ic_chat"
                    app:iconTint="@android:color/black" />

                <TextView
                    android:id="@+id/productTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:paddingTop="20dp"
                    android:textStyle="bold"
                    android:text="@string/product"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/starButton"
                    style="?attr/materialIconButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:clickable="false"
                    app:icon="@drawable/ic_star"
                    app:iconTint="@color/gold" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/generalInformation"
                android:id="@+id/productInfo"
                android:background="@color/card_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="32sp" />
                <TextView
                    android:id="@+id/productCategory"
                    android:text="@string/category"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/productEventTypes"
                    android:text="@string/category"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="@string/description"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/productDescription"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:id="@+id/no_images"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_images"
                        android:visibility="gone"
                        android:fontFamily="@font/jejumyeongjo"
                        android:layout_gravity="center"/>
                    <ProgressBar
                        android:id="@+id/loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scrollbars="vertical"
                        android:overScrollMode="never"
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:layout_gravity="center"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/providerButton"
                        style="?attr/materialIconButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_account"
                        app:iconTint="@android:color/black" />

                    <TextView
                        android:id="@+id/providerName"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/jejumyeongjo"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/companyButton"
                        style="?attr/materialIconButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_company"
                        app:iconTint="@android:color/black" />

                    <TextView
                        android:id="@+id/companyName"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/jejumyeongjo"
                        android:textSize="16sp"/>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/purchaseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/purchase"
                    android:backgroundTint="@color/md_theme_primary"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addToPlannedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/add_to_planner"
                    android:backgroundTint="@color/md_theme_primary"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backToPlannerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/back_to_planner"
                    android:backgroundTint="@color/md_theme_primary"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/see_comments_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_comments"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/md_theme_primary"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>