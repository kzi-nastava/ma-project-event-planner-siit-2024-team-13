<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/windowBackground"
    tools:context=".presentation.calendar.fragments.DateDetailsBottomSheetFragment">

    <TextView
        android:id="@+id/no_events_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_plans"
        android:fontFamily="@font/jejumyeongjo"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_attend"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/jejumyeongjo"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendingEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/organized_events_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/organized"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/jejumyeongjo"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/organizedEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/reservations_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/reservations"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/jejumyeongjo"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_gravity="center" />
</LinearLayout>
