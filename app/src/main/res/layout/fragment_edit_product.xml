<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.solution.fragments.product.EditProductFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/md_theme_primaryContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/editTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/jejumyeongjo"
                android:gravity="center_horizontal"
                android:text="@string/edit_product"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/generalText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/general"
                android:fontFamily="@font/jejumyeongjo"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/editTextView" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productNameInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:hint="@string/name"
                android:minHeight="56dp"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/generalText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:importantForAccessibility="yes"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productDescriptionInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:hint="@string/description"
                android:minHeight="56dp"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productNameInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productDescriptionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:fontFamily="@font/jejumyeongjo" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/priceAndDiscountText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/price_and_discount"
                android:fontFamily="@font/jejumyeongjo"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/productDescriptionInputLayout" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productPriceInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:hint="@string/price"
                android:minHeight="56dp"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/priceAndDiscountText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productPriceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:inputType="number"
                    android:fontFamily="@font/jejumyeongjo"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/productDiscountInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:hint="@string/discount"
                android:minHeight="56dp"
                app:boxBackgroundMode="outline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productPriceInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productDiscountText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:fontFamily="@font/jejumyeongjo"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/visibilityAndAvailabilityText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/visibility_and_availability"
                android:fontFamily="@font/jejumyeongjo"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/productDiscountInputLayout" />

            <CheckBox
                android:id="@+id/visibilityBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/visible"
                android:fontFamily="@font/jejumyeongjo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visibilityAndAvailabilityText" />

            <CheckBox
                android:id="@+id/availabilityBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/available"
                android:fontFamily="@font/jejumyeongjo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/visibilityBox" />


            <TextView
                android:id="@+id/eventTypesText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/event_types"
                android:fontFamily="@font/jejumyeongjo"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/availabilityBox" />

            <LinearLayout
                android:id="@+id/eventTypeCheckboxList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_goneMarginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/eventTypesText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/eventTypeRecycleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:orientation="vertical"
                    android:background="@color/card_background"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_gravity="center" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:text="@string/gallery"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="20dp"
                    android:textAlignment="center"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <ProgressBar
                        android:id="@+id/loader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/images"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:scrollbars="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/newImagesCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/newImages"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:scrollbars="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload"
                    android:backgroundTint="@color/md_theme_primary"
                    android:fontFamily="@font/jejumyeongjo"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editProductButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/md_theme_primary"
                    android:text="@string/save"
                    android:fontFamily="@font/jejumyeongjo"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>