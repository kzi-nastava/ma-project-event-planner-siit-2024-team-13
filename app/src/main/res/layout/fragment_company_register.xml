<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".presentation.company.fragments.CompanyRegisterFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_primaryContainer">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/information_about_company"
                android:textColor="@color/md_theme_primary"
                android:textSize="20sp"
                android:fontFamily="@font/jejumyeongjo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pageTitle"
                android:hint="@string/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/jejumyeongjo"
                    android:importantForAccessibility="yes" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:fontFamily="@font/jejumyeongjo"                    android:inputType="text"
                    android:hint="@string/name"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:fontFamily="@font/jejumyeongjo"
                    android:inputType="text"
                    android:hint="@string/address"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvCityLabel"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/jejumyeongjo"
                android:text="City"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="start"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="40dp"
                android:hint="City"
                app:layout_constraintTop_toBottomOf="@id/tvCityLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/md_theme_secondaryContainer">

                <Spinner
                    android:id="@+id/spinnerCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:spinnerMode="dropdown" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/number"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/numberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:hint="@string/phone_number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/description"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/descriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/jejumyeongjo"
                    android:gravity="top"
                    android:importantForAccessibility="yes"
                    android:hint="@string/description"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/openingTimeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:hint="Opens">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/openingTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/closingTimeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/openingTimeLayout"
                android:hint="Closes">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/closingTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/photosLabel"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/jejumyeongjo"
                android:text="Images"
                app:layout_constraintTop_toBottomOf="@id/closingTimeLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="start"/>

            <HorizontalScrollView
                android:id="@+id/photos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photosLabel"
                android:layout_marginTop="16dp"
                android:background="@color/md_theme_secondaryContainer"
                android:paddingHorizontal="40dp">

                <LinearLayout
                    android:id="@+id/photosContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    android:background="@color/md_theme_secondaryContainer"
                    android:gravity="center">

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload"
                android:drawableStart="@drawable/ic_upload"
                android:backgroundTint="@color/md_theme_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photos"
                android:layout_marginTop="16dp"/>

            <ImageButton
                android:id="@+id/arrowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_next"
                android:importantForAccessibility="yes"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_gravity="end"
                app:layout_constraintTop_toBottomOf="@id/uploadButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>