<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.auth.fragments.RegisterFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_primaryContainer">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/join_the_eventorium_community"
                android:textColor="@color/md_theme_primary"
                android:textSize="24sp"
                android:fontFamily="@font/jejumyeongjo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pageTitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:fontFamily="@font/jejumyeongjo"
                    android:hint="@string/name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastname"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:fontFamily="@font/jejumyeongjo"
                    android:hint="@string/lastname"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lastname">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:fontFamily="@font/jejumyeongjo"
                    android:hint="@string/address"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvCityLabel"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/jejumyeongjo"
                android:text="City"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="start"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/city"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="40dp"
                android:hint="City"
                app:layout_constraintTop_toBottomOf="@id/tvCityLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/md_theme_secondaryContainer">

                <Spinner
                    android:id="@+id/spinnerCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:spinnerMode="dropdown" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/number"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/numberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="yes"
                    android:inputType="text"
                    android:fontFamily="@font/jejumyeongjo"
                    android:hint="@string/phone_number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                app:endIconMode="clear_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number"
                android:hint="@string/email">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/jejumyeongjo"
                    android:importantForAccessibility="yes" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                app:endIconMode="password_toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email"
                android:hint="@string/password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/jejumyeongjo"
                    android:importantForAccessibility="yes" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPassword"
                app:endIconMode="password_toggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintWidth_min="250dp"
                app:layout_constraintWidth_max="350dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password"
                android:hint="@string/confirm_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="@font/jejumyeongjo"
                    android:importantForAccessibility="yes" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/registerAs"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/jejumyeongjo"
                android:text="@string/register_as"
                app:layout_constraintTop_toBottomOf="@id/confirmPassword"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="start"
                />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/roleDropdownLayout"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintTop_toBottomOf="@id/registerAs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/md_theme_secondaryContainer" >

                <Spinner
                    android:id="@+id/spinnerRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jejumyeongjo"
                    android:spinnerMode="dropdown" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/uploadPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/roleDropdownLayout">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/profile_photo"
                    android:contentDescription="@string/profile_picture"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>

                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload"
                    android:importantForAccessibility="yes"
                    android:drawableStart="@drawable/ic_upload"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:backgroundTint="@color/md_theme_primary" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/arrowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_next"
                android:importantForAccessibility="yes"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_gravity="end"
                app:layout_constraintTop_toBottomOf="@id/uploadPicture"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>