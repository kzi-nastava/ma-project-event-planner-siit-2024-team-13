<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_provider"
    app:startDestination="@id/nav_user">

    <include app:graph="@navigation/nav_user"  />

    <fragment
        android:id="@+id/manageServicesFragment"
        android:name="com.eventorium.presentation.solution.fragments.service.ManageServiceFragment"
        android:label="fragment_manage_service"
        tools:layout="@layout/fragment_service_overview">
        <action
            android:id="@+id/action_manageServices_to_serviceDetails"
            app:destination="@id/serviceDetailsFragment"/>
        <action
            android:id="@+id/action_manageService_to_editService"
            app:destination="@+id/editServiceFragment"/>
    </fragment>

    <fragment
        android:id="@+id/editServiceFragment"
        android:name="com.eventorium.presentation.solution.fragments.service.EditServiceFragment"
        android:label="fragment_edit_service"
        tools:layout="@layout/fragment_edit_service">
        <action
            android:id="@+id/action_update_to_serviceManagement"
            app:destination="@id/manageServicesFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/createServiceFragment"
        android:name="com.eventorium.presentation.solution.fragments.service.CreateServiceFragment"
        android:label="fragment_create_service"
        tools:layout="@layout/fragment_create_service">
        <action
            android:id="@+id/action_create_to_serviceOverview"
            app:destination="@+id/manageServicesFragment"/>
    </fragment>

    <fragment
        android:id="@+id/createProductFragment"
        android:name="com.eventorium.presentation.solution.fragments.product.CreateProductFragment"
        tools:layout="@layout/fragment_create_product">
        <!--TODO: add action to productOverview-->
    </fragment>

    <fragment
        android:id="@+id/companyEditFragment"
        android:name="com.eventorium.presentation.company.fragments.EditCompanyFragment"
        android:label="fragment_edit_company"
        tools:layout="@layout/fragment_edit_company"/>

    <fragment
        android:id="@+id/priceList"
        android:name="com.eventorium.presentation.solution.fragments.pricelist.PriceListFragment"
        android:label="fragment_price_list"
        tools:layout="@layout/fragment_price_list"/>

    <fragment
        android:id="@+id/manageReservationFragment"
        android:name="com.eventorium.presentation.solution.fragments.service.ManageReservationFragment"
        android:label="fragment_manage_reservation"
        tools:layout="@layout/fragment_manage_reservation">
        <action android:id="@+id/action_manageReservation_to_serviceDetails"
            app:destination="@+id/serviceDetailsFragment" />
        <action android:id="@+id/action_manageReservation_to_eventDetails"
            app:destination="@+id/eventDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventDetailsFragment"
        android:name="com.eventorium.presentation.event.fragments.EventDetailsFragment"
        tools:layout="@layout/fragment_event_details">
        <action
            android:id="@+id/action_event_details_to_organizer"
            app:destination="@id/otherProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/otherProfileFragment"
        android:name="com.eventorium.presentation.user.fragments.UserProfileFragment"
        tools:layout="@layout/fragment_user_profile">
        <action
            android:id="@+id/action_profile_to_report"
            app:destination="@id/reportUserFragment"/>
    </fragment>

    <fragment
        android:id="@+id/reportUserFragment"
        android:name="com.eventorium.presentation.user.fragments.UserReportFragment"
        android:label="fragment_report_user"
        tools:layout="@layout/fragment_user_report" />

    <fragment
        android:id="@+id/providerCompanyFragment"
        android:name="com.eventorium.presentation.company.fragments.ProviderCompanyFragment"
        android:label="fragment_company_details"
        tools:layout="@layout/fragment_provider_company" />

    <action
        android:id="@+id/action_companyDetails_to_editCompanyFragment"
        app:destination="@id/companyEditFragment" />

    <fragment
        android:id="@+id/serviceDetailsFragment"
        android:name="com.eventorium.presentation.solution.fragments.service.ServiceDetailsFragment"
        android:label="fragment_service_details"
        tools:layout="@layout/fragment_service_details">
    </fragment>

</navigation>